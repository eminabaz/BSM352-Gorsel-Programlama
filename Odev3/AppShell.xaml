<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Odev3.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Odev3.Views"
    Shell.FlyoutBehavior="Flyout" 
    Title="Odev3">

    <Shell.FlyoutHeader>
        <VerticalStackLayout BackgroundColor="#512BD4" Padding="20" HeightRequest="200">
            <Label Text="Menü" TextColor="White" FontSize="24" FontAttributes="Bold" VerticalOptions="Center"/>
        </VerticalStackLayout>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Giriş" Icon="home.png">
        <ShellContent ContentTemplate="{DataTemplate local:Home}" Route="Home" />
    </FlyoutItem>

    <FlyoutItem Title="Kurlar">
        <ShellContent ContentTemplate="{DataTemplate local:kurlar}" />
    </FlyoutItem>

    <FlyoutItem Title="Haberler">
        <ShellContent ContentTemplate="{DataTemplate local:haberler}" />
    </FlyoutItem>

    <FlyoutItem Title="Hava Durumu">
        <ShellContent ContentTemplate="{DataTemplate local:havaDurumu}" />
    </FlyoutItem>

    <FlyoutItem Title="Yapılacaklar">
        <ShellContent ContentTemplate="{DataTemplate local:todo}" />
    </FlyoutItem>

    <FlyoutItem Title="Ayarlar">
        <ShellContent ContentTemplate="{DataTemplate local:ayarlar}" />
    </FlyoutItem>

</Shell>
